%h1 Listing friendships

%table
  %tr
    %th
    %th
    %th

  - @friendships.each do |friendship|
    %tr
      %td= link_to friendship.user.name, user_path(friendship.user)
      %td= link_to friendship.friend.name, user_path(friendship.friend)
      %td
        = link_to 'Show', friendship
        /
          = link_to 'Edit', edit_friendship_path(friendship)
        = link_to 'Destroy', friendship, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Friendship', new_friendship_path
