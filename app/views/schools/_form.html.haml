= simple_form_for(@school) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :province
    = f.input :city
    = f.input :zipcode
    = f.input :address

  .form-actions
    = f.button :submit
    = link_to t(:back), schools_path, class: 'btn waves-effect waves-light blue'
