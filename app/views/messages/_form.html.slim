/= simple_form_for :message, url: [:reply, conversation], :html=>{id: 'message'} do |f|
= simple_form_for :message, url: reply_conversation_path(conversation) do |f|

  = f.input :subject, required: false

  = f.input :body, required: true, autofocus: true

  = f.button :submit, t(:send), class: 'btn-primary'
  = submit_tag t(:reset), type: :reset, class: 'button alert'

javascript:
  $("#message").validate();
